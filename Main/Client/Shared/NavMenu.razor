            <Header>
                <img src="img/logo.svg" width="30" height="30" alt=""/>
                Hyper
            </Header>
            <Content>
                <BSNav Justify="Justify.End" Class="flex-grow-1" PaddingEnd="Padding.Medium">
                    <BSNavItem IsActive="true" MarginBottom="Margins.Medium" Url="/tournaments" Class="text-light">
                        <i class="fa fa-solid fa-trophy" style="margin-right: 5px;"></i>
                        Турниры
                    </BSNavItem>
                    <BSNavItem IsActive="true" MarginBottom="Margins.Medium" Url="/players" Class="text-light">
                        <i class="fa fa-solid fa-users" style="margin-right: 5px;"></i>
                        Игроки
                    </BSNavItem>
                    <BSNavItem IsActive="true" MarginBottom="Margins.Medium" Url="/rules" Class="text-light">
                        <svg style="margin-right: 5px;" width="25" height="25" xmlns="http://www.w3.org/2000/svg"
                             viewBox="0 0 640 512">
                            <path fill="#fff"
